<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:script>var json = {title: 'Game', 'back': true  };</fest:script>
    
    <div class="page-game default-hidden">
        <fest:include src="./base.xml" context="json"/>
        
        <div class="game-result">
            CommandBlue: <span class="game-result__result-blue"></span><br></br>
            CommandRed: <span class="game-result__result-red"></span><br></br>
            Winner: <span class="game-result__result-winner"></span><br></br>
            <span class="game-result__winner-status"></span><br></br>
            Your team: <span class="game-result__player-team"></span><br></br>
            <span class="game-result__player-result"></span><br></br>
        </div>
        
        <div class="game-info">
            <span class="game-info-status-player"></span> : 
            <span class="game-info-status-players-target"></span>
            <table class="game-info__ability-status" align="center">
                <tr>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <td>4</td>
                    <td>5</td>
                    <td>6</td>
                    <td>7</td>
                    <td>8</td>
                    <td>9</td>
                    <td>0</td>
                </tr>
                <tr>
                    <td class="ability1-name"></td>
                    <td class="ability2-name"></td>
                    <td class="ability3-name"></td>
                    <td class="ability4-name"></td>
                    <td class="ability5-name"></td>
                    <td class="ability6-name"></td>
                    <td class="ability7-name"></td>
                    <td class="ability8-name"></td>
                    <td class="ability9-name"></td>
                    <td class="ability0-name"></td>
                </tr>
                <tr>
                    <td class="ability1-time"></td>
                    <td class="ability2-time"></td>
                    <td class="ability3-time"></td>
                    <td class="ability4-time"></td>
                    <td class="ability5-time"></td>
                    <td class="ability6-time"></td>
                    <td class="ability7-time"></td>
                    <td class="ability8-time"></td>
                    <td class="ability9-time"></td>
                    <td class="ability0-time"></td>
                </tr>
            </table>
            <table class="game-info-status-flags" align="center">
                <tr><td>Red</td><td>_</td><td>Blue</td></tr>
                <tr><td class="pointsRed"></td><td class="captureTime"></td><td class="pointsBlue"></td></tr>
            </table>
        </div>
        <div class="game-map">
            <canvas id="game-map__background"></canvas>
            <canvas id="game-map__middleground"></canvas>
            <canvas id="game-map__frontground"></canvas>
        </div>
        <div class="game-info">
            <img class="game-info__img pressZ" src="/res/button_z.png"></img>
        </div>
        <fest:include src="./backbutton.xml"/>	
	</div>
    
</fest:template>