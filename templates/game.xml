<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:script>var json = {title: 'Game', 'back': true  };</fest:script>
    
    <div class="page-game default-hidden">
        
        <div class="game-result">
            CommandBlue: <span class="game-result__result-blue"></span><br></br>
            CommandRed: <span class="game-result__result-red"></span><br></br>
            Winner: <span class="game-result__result-winner"></span><br></br>
            <span class="game-result__winner-status"></span><br></br>
            Your team: <span class="game-result__player-team"></span><br></br>
            <span class="game-result__player-result"></span><br></br>
        </div>
 
        <div class="game-info">    
            <div class="players-hitpoints">
                <span class="players-hitpoints__player"></span> : 
                <span class="players-hitpoints__players-target"></span>
            </div>
        </div>
        
        <div class="game-map">
            <canvas id="game-map__background"></canvas>
            <canvas id="game-map__middleground"></canvas>
            <canvas id="game-map__frontground"></canvas>
        </div>
        
        <div class="game-info">    
            <div class="abilities-status">
                <div class="abilities-status__ability_number-1 ability">
                    <div class="ability__key_number-1">1</div>
                    <div class="ability__name_number-1"></div>
                    <div class="ability__time_number-1"></div>
                </div>
                <div class="abilities-status__ability_number-2 ability">
                    <div class="ability__key_number-2">2</div>
                    <div class="ability__name_number-2"></div>
                    <div class="ability__time_number-2"></div>
                </div>
                <div class="abilities-status__ability_number-3 ability">
                    <div class="ability__key_number-3">3</div>
                    <div class="ability__name_number-3"></div>
                    <div class="ability__time_number-3"></div>
                </div>
                <div class="abilities-status__ability_number-4 ability">
                    <div class="ability__key_number-4">4</div>
                    <div class="ability__name_number-4"></div>
                    <div class="ability__time_number-4"></div>
                </div>
                <div class="abilities-status__ability_number-5 ability">
                    <div class="ability__key_number-5">5</div>
                    <div class="ability__name_number-5"></div>
                    <div class="ability__time_number-5"></div>
                </div>
                <div class="abilities-status__ability_number-6 ability">
                    <div class="ability__key_number-6">6</div>
                    <div class="ability__name_number-6"></div>
                    <div class="ability__time_number-6"></div>
                </div>
                <div class="abilities-status__ability_number-7 ability">
                    <div class="ability__key_number-7">7</div>
                    <div class="ability__name_number-7"></div>
                    <div class="ability__time_number-7"></div>
                </div>
                <div class="abilities-status__ability_number-8 ability">
                    <div class="ability__key_number-8">8</div>
                    <div class="ability__name_number-8"></div>
                    <div class="ability__time_number-8"></div>
                </div>
                <div class="abilities-status__ability_number-9 ability">
                    <div class="ability__key_number-9">9</div>
                    <div class="ability__name_number-9"></div>
                    <div class="ability__time_number-9"></div>
                </div>
                <div class="abilities-status__ability_number-0 ability">
                    <div class="ability__key_number-0">0</div>
                    <div class="ability__name_number-0"></div>
                    <div class="ability__time_number-0"></div>
                </div>
            </div>
        </div>
          
        <div class="game-info">
            <img class="game-info__img pressZ" src="/res/button_z.png"></img>
            <table class="game-info-status-flags">
                <tr><td>Red</td><td>_</td><td>Blue</td></tr>
                <tr><td class="pointsRed"></td><td class="captureTime"></td><td class="pointsBlue"></td></tr>
            </table>
        </div>

        <div class="please_wait">Ожидание игроков, пожалуйста подождите!</div>
        
        <fest:include src="./backbutton.xml"/>	
	</div>
    
</fest:template>