<fest:template xmlns:fest="http://fest.mail.ru">
    <fest:script>var json = {title: 'Login', 'back': true  };</fest:script>
    
    <div class="page-login default-hidden">
        <fest:include src="./base.xml" context="json"/>
        <div class="login-form">
            <form class="form form-login"  method="post" action="">
                <p class="form__errors"> </p>
                <p> <label><input type="text" name="name" class="form__input"/></label></p>
                <p> <label><input type="password" name="password" class="form__input"/></label></p>
                <p> <button class="form__submit">Login</button></p>
            </form>
        </div>
        <div class="unlogin-form"  method="post" action="">
            <form class="form form-unlogin">
                <p><button class="form__submit">Exit</button></p>
            </form>
        </div>
        <fest:include src="./backbutton.xml"/>
    </div>

</fest:template>
